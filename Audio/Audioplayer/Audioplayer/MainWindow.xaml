        <Button x:Name="stop" Content="Megállítás" HorizontalAlignment="Left" Margin="243,339,0,0" VerticalAlignment="Top" Width="75" Click="stop_Click"/>
        <Image Source="—Pngtree—vector high volume icon_3773573.png" Stretch="Fill" Margin="325,389,12,19"/>
